{
  "name": "intra_backend",
  "version": "1.0.0",
  "description": "Backend of the PoC Intranet",
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run generate && tsc",
    "generate": "npm run generate:prisma && npm run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "npm run generate",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server",
    "db": "npm run db:migrate && npm run db:up",
    "db:migrate": "prisma migrate save --create-db --experimental",
    "db:up": "prisma migrate up --create-db --experimental"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PoCFrance/PoC-intranet.git"
  },
  "author": "Vasek - Tom Chauveau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PoCFrance/PoC-intranet/issues"
  },
  "homepage": "https://github.com/PoCFrance/PoC-intranet#readme",
  "dependencies": {
    "@nexus/schema": "^0.14.0",
    "@types/node": "^14.0.23",
    "apollo-server-express": "^2.15.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http": "0.0.1-security",
    "nexus": "^0.25.0",
    "nexus-plugin-prisma": "^0.16.1",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.52",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@nexus/schema": "^0.14.0",
    "@types/multer": "^1.4.3",
    "@types/node": "^14.0.23",
    "apollo-server-express": "^2.15.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "http": "0.0.1-security",
    "multer": "^1.4.2",
    "nexus": "^0.25.0",
    "nexus-plugin-prisma": "^0.16.1",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.52",
    "typescript": "^3.9.6"
  }
}
