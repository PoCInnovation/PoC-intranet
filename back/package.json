{
  "name": "intra_backend",
  "version": "1.0.0",
  "description": "Backend of the PoC Intranet",
  "main": "src/server.ts",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build"
    }
  },
  "scripts": {
    "start": "node dist/server",
    "clean": "rm -rf dist src/generated",
    "lint": "eslint ./src/** ",
    "lint:fix": "eslint --fix ./src/**",
    "build": "npm run clean && npm run generate && tsc",
    "generate": "npm run generate:prisma && npm run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "dev": "npm run db && ts-node-dev --no-notify --respawn --transpile-only src/server",
    "dev:db": "docker run --name ${DB_NAME} -e POSTGRES_PASSWORD=${DB_PASS} -e POSTGRES_USER=${DB_USER} -p ${DB_PORT}:${DB_PORT} -d postgres:alpine",
    "db": "npm run db:save && npm run db:up",
    "db:save": "prisma migrate save --create-db --experimental",
    "db:up": "prisma migrate up --experimental",
    "db:studio": "prisma studio --experimental --port 3000",
    "db:seed": "exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PoCFrance/PoC-intranet.git"
  },
  "author": "Vasek - Tom Chauveau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PoCFrance/PoC-intranet/issues"
  },
  "homepage": "https://github.com/PoCFrance/PoC-intranet#readme",
  "dependencies": {
    "@nexus/schema": "^0.14.0",
    "@types/airtable": "^0.8.0",
    "@types/node": "^14.0.23",
    "airtable": "^0.9.0",
    "apollo-server-express": "^2.15.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "env-var": "^6.3.0",
    "express": "^4.17.1",
    "http": "0.0.1-security",
    "husky": "^4.2.5",
    "multer": "^1.4.2",
    "nexus": "^0.25.0",
    "nexus-plugin-prisma": "^0.16.1",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.52",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@types/multer": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "@typescript-eslint/typescript-estree": "^3.8.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "to": "^0.2.9",
    "update": "^0.7.4"
  }
}
